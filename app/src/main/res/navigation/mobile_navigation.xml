<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.skubiq_kotlin.view.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_unloadingFragment"
            app:destination="@id/unloadingFragment" />
    </fragment>
    <fragment
        android:id="@+id/unloadingFragment"
        android:name="com.example.skubiq_kotlin.view.fragments.UnloadingFragment"
        android:label="UnloadingFragment" >
        <action
            android:id="@+id/action_unloadingFragment_to_goodsInFragment"
            app:destination="@id/goodsInFragment" />
    </fragment>
    <fragment
        android:id="@+id/goodsInFragment"
        android:name="com.example.skubiq_kotlin.view.fragments.GoodsInFragment"
        android:label="fragment_goods_in"
        tools:layout="@layout/fragment_goods_in" />
    <fragment
        android:id="@+id/drawerFragment"
        android:name="com.example.skubiq_kotlin.view.fragments.DrawerFragment"
        android:label="DrawerFragment" >
        <action
            android:id="@+id/action_drawerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_drawerFragment_to_unloadingFragment"
            app:destination="@id/unloadingFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.skubiq_kotlin.view.fragments.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
</navigation>