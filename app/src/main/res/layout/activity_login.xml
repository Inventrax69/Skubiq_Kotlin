<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/loginParent"
    tools:context="com.example.skubiq_kotlin.view.activities.LoginActivity">


    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/home_image"
        app:layout_constraintDimensionRatio="383:137"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    </ImageView>
    <TextView
        android:id="@+id/ivLang"
        android:layout_width="100dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:drawableRight="@drawable/belgium1"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:text="@string/select" />



    <TextView
        android:id="@+id/tvSelectDivision"
        style="@style/textViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinnerSelectDivision"
        android:text="@string/scan_type">
    </TextView>

    <com.example.skubiq_kotlin.searchableSpinner.SearchableSpinner
        android:id="@+id/spinnerSelectDivision"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="45dp">
    </com.example.skubiq_kotlin.searchableSpinner.SearchableSpinner>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="210dp"
        android:layout_height="60dp"
       app:layout_constraintTop_toBottomOf="@+id/spinnerSelectDivision"
        app:layout_constraintBottom_toTopOf="@+id/constraintClaimDialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="15dp"
        android:background="@drawable/logologin" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintClaimDialog"
        android:layout_width="match_parent"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toBottomOf="@+id/background_image"
        android:layout_height="340dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
      android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/loginViewsMargin"
        style="@style/loginCard"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/whiteCardColor"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/loginCardRadius">
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/login"
        style="@style/headerTextPrimary"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:text="@string/login"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="@+id/card_view"
        app:layout_constraintTop_toTopOf="@+id/card_view"
        app:layout_constraintEnd_toEndOf="@+id/card_view"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/etUsername"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/login"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:drawableLeft="@drawable/user_name"
        android:drawablePadding="@dimen/activity_login_padding_left"
        android:hint="@string/userHint"
       app:layout_constraintLeft_toLeftOf="@+id/card_view"
        android:inputType="textEmailAddress"
        android:singleLine="true" />

    <EditText
        android:id="@+id/etPass"
        android:textSize="18sp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        style="@style/editTextStyle"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:elevation="2dp"
        android:drawableLeft="@drawable/password"
        android:drawableRight="@drawable/show_password"
        android:drawablePadding="@dimen/activity_login_padding_left"
        android:fontFamily="sans-serif"
        android:hint="@string/passHint"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/etUsername"
        android:singleLine="true" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/whiteTextColor"
        android:textStyle="bold"
        android:background="@drawable/login_button_bk"
        android:layout_marginTop="25dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/etPass"
        app:layout_constraintEnd_toEndOf="@+id/card_view"
        app:layout_constraintStart_toStartOf="@+id/card_view"
        android:text="@string/login" />

    <CheckBox
        android:id="@+id/cbRememberMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginLeft="18dp"

        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        android:buttonTint="@color/pink"
        android:text="@string/rememberMe" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/txtVersionName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:text="Version" />

    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/settings"
        android:visibility="visible"
        android:layout_marginRight="30dp" />
</androidx.constraintlayout.widget.ConstraintLayout>